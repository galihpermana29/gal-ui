{
  "name": "@gsynergysg/ui-components",
  "version": "1.1.1",
  "description": "Synergy UI Components - Internal component library based on Ant Design",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./styles.css": {
      "default": "./dist/styles.css"
    },
    "./theme.css": {
      "default": "./dist/theme.css"
    },
    "./tailwind.preset": "./tailwind.preset.js",
    "./dist/*": "./dist/*"
  },
  "files": [
    "dist",
    "tailwind.preset.js",
    "README.md"
  ],
  "sideEffects": [
    "**/*.css",
    "dist/styles.css",
    "dist/theme.css"
  ],
  "scripts": {
    "build": "npm run bundle-styles && npm run build:css && tsup",
    "dev": "tsup --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "migrate": "node scripts/migrate-components.js",
    "bundle-styles": "node scripts/bundle-styles.js",
    "build:css": "tailwindcss -c tailwind.build.config.cjs -i src/styles.css -o dist/styles.css --minify"
  },
  "keywords": [
    "react",
    "antd",
    "ui-components",
    "synergy"
  ],
  "author": "Synergy SG",
  "license": "UNLICENSED",
  "private": false,
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "peerDependencies": {
    "antd": "^5.18.0",
    "next": "^14.0.0 || ^15.0.0",
    "react": "^18.2.0 || ^19.0.0",
    "react-dom": "^18.2.0 || ^19.0.0"
  },
  "dependencies": {
    "@untitled-ui/icons-react": "^0.1.3",
    "clsx": "^2.1.0",
    "dompurify": "3.2.7",
    "framer-motion": "12.23.22",
    "lodash": "4.17.21",
    "tailwind-merge": "^2.2.0",
    "usehooks-ts": "3.1.1"
  },
  "devDependencies": {
    "@types/lodash": "4.17.20",
    "@types/node": "^20.14.10",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "antd": "^5.18.3",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.57.0",
    "next": "^15.0.0",
    "postcss": "^8.4.38",
    "postcss-nesting": "^12.1.5",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tsup": "^8.0.0",
    "tailwindcss": "^3.4.13",
    "typescript": "^5.5.0"
  }
}
